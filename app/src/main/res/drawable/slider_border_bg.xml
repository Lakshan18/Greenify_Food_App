<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#616161" />
            <corners android:radius="12dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6B6B6B" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#7C7C7C" />
        </shape>
    </item>
</layer-list>