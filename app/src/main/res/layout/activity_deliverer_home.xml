<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
   >

    <!-- Header Title -->
    <TextView
        android:id="@+id/tv_deliverer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greenify Deliverer"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tv_deliverer_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Assigned Deliveries Section -->
            <TextView
                android:id="@+id/tv_assigned_deliveries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongoing Deliveries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_assigned_deliveries"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Recent Deliveries Section -->
            <TextView
                android:id="@+id/tv_recent_deliveries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Deliveries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_recent_deliveries"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Recent Customer Feedback Section -->
            <TextView
                android:id="@+id/tv_customer_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Customer Feedbacks"
                android:textColor="#424242"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_customer_feedback"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
